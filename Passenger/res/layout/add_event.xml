<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff" >

    <LinearLayout
        android:id="@+id/layout_touch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/image_about_us"
            android:layout_width="match_parent"
            android:layout_height="@dimen/image_wid_big"
            android:scaleType="fitXY"
            android:src="@drawable/image_login_top" />

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_three"
            android:text="编辑提醒:"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_four" />

        <!-- <Button -->
        <!-- android:id="@+id/btn_line" -->
        <!-- android:layout_width="match_parent" -->
        <!-- android:layout_height="0.5dip" -->
        <!-- android:layout_margin="@dimen/margin_three" -->
        <!-- android:background="@drawable/image_remind_line" /> -->
        <!-- <DigitalClock -->
        <!-- android:id="@+id/dClock" -->
        <!-- android:layout_width="fill_parent" -->
        <!-- android:layout_height="wrap_content" -->
        <!-- android:layout_gravity="center_horizontal" -->
        <!-- android:gravity="center" -->
        <!-- android:textColor="#00f" -->
        <!-- android:textSize="20sp" /> -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal" >

            <!-- <TextView -->
            <!-- android:layout_width="120dip" -->
            <!-- android:layout_height="wrap_content" -->
            <!-- android:layout_margin="5dip" -->
            <!-- android:gravity="right|center_vertical" -->
            <!-- android:text="提醒内容：" -->
            <!-- android:textColor="#000" -->
            <!-- android:textSize="@dimen/text_four" /> -->

            <EditText
                android:id="@+id/edit_content"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_height"
                android:layout_margin="10dip"
                android:background="@drawable/edit_selector"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="别忘了您的发车时间哦！"
                android:paddingLeft="15dip" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dip"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/edit_time"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_height"
                android:layout_margin="10dip"
                android:background="@drawable/image_remind__time_btn"
                android:gravity="center"
                android:text="设置提醒时间"
                android:textSize="@dimen/text_five" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_okay"
            style="@style/Button_Style"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="20dip"
            android:background="@drawable/image_remind_btn"
            android:text="确定" />
    </LinearLayout>

</ScrollView>