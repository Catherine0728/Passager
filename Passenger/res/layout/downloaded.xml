<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="60dip"
    android:background="#fff"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layout_line"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/layout_myfav_toselect"
            android:layout_width="50dip"
            android:layout_height="40dip"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/image_mygav_toselect"
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:layout_gravity="center"
                android:layout_marginLeft="20dip"
                android:background="@drawable/icon_selector_false"
                android:scaleType="fitXY" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dip"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/text_name"
                style="@style/TextStyle"
                android:layout_width="150dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dip"
                android:gravity="left|center_vertical"
                android:text="@string/text_default"
                android:textColor="#000"
                android:textSize="@dimen/text_five" />

            <TextView
                android:id="@+id/text_size"
                style="@style/TextStyle"
                android:layout_width="30dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dip"
                android:gravity="left|center_vertical"
                android:text="@string/text_default"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/text_six" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_check"
            android:layout_width="wrap_content"
            android:layout_height="50dip"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="20dip"
            android:background="#00000000"
            android:gravity="center"
            android:text="查看"
            android:textColor="@color/bg_nav_color"
            android:textSize="@dimen/text_six" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.1dip"
        android:layout_margin="2dip"
        android:alpha="0.3"
        android:background="@drawable/image_remind_line" />

</LinearLayout>