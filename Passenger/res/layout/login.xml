<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Scorll_Style"
    android:background="@drawable/image_login_bg" >

    <LinearLayout
        android:id="@+id/layout_touch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#fff"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="270dip"
            android:gravity="center"
            android:orientation="vertical" >

            <!-- <ImageView -->
            <!-- android:layout_width="wrap_content" -->
            <!-- android:scaleType="fitXY" -->
            <!-- android:layout_gravity="center_horizontal" -->
            <!-- android:layout_height="180dip" -->
            <!-- android:background="@drawable/image_logo" /> -->

            <EditText
                android:id="@+id/edit_username"
                android:layout_width="match_parent"
                android:layout_height="@dimen/login_edit_height"
                android:layout_gravity="center"
                android:layout_margin="15dip"
                android:background="@drawable/edit_selector"
                android:drawableLeft="@drawable/icon_login_phone"
                android:drawablePadding="10dip"
                android:hint="请输入用户名"
                android:inputType="textEmailAddress"
                android:paddingLeft="15dip"
                android:textSize="@dimen/text_five" />
            <!-- </LinearLayout> -->

            <EditText
                android:id="@+id/edit_Pass"
                android:layout_width="match_parent"
                android:layout_height="@dimen/login_edit_height"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:background="@drawable/edit_selector"
                android:drawableLeft="@drawable/icon_login_pass"
                android:drawablePadding="10dip"
                android:hint="请输入密码"
                android:inputType="number"
                android:paddingLeft="15dip"
                android:password="true"
                android:textSize="@dimen/text_five" />
            <!-- </LinearLayout> -->

            <TextView
                android:id="@+id/text_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="用户名或密码输入有误"
                android:textColor="#000"
                android:textSize="@dimen/text_six"
                android:visibility="invisible" />

            <Button
                android:id="@+id/btn_Login"
                android:layout_width="match_parent"
                android:layout_height="@dimen/login_edit_height"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:background="@drawable/image_login_btn_ok"
                android:text="@string/btn_login"
                android:textColor="#fff"
                android:textSize="@dimen/text_four" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="5dip"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/text_register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:text="立即注册"
                    android:textColor="#000"
                    android:textSize="@dimen/text_four" />

                <TextView
                    android:id="@+id/text_forget"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    android:text="忘记密码"
                    android:textColor="#000"
                    android:textSize="@dimen/text_four" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>