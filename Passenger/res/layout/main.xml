        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/image_hei_heng"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/news_image_one"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/image_hei_heng"
                    android:layout_gravity="center"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/news_text_one"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/title_bg_height"
                    android:layout_marginTop="80dip"
                    android:background="@drawable/image_botton_title_more"
                    android:gravity="center"
                    android:maxLength="10"
                    android:shadowColor="#ff000000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="1"
                    android:singleLine="true"
                    android:text="@string/text_default"
                    android:textColor="#fff"
                    android:textSize="@dimen/text_six" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/image_hei_heng"
                android:layout_marginLeft="5dip"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/news_image_two"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/image_hei_heng"
                    android:layout_gravity="center"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/news_text_two"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/title_bg_height"
                    android:layout_marginTop="80dip"
                    android:background="@drawable/image_botton_title_more"
                    android:gravity="center"
                    android:maxLength="10"
                    android:shadowColor="#ff000000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="1"
                    android:singleLine="true"
                    android:text="@string/text_default"
                    android:textColor="#fff"
                    android:textSize="@dimen/text_six" />
            </RelativeLayout>
        </LinearLayout>

        <GridView
            android:id="@+id/news_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:listSelector="#00000000"
            android:numColumns="2"
            android:scrollbars="none" />
        <!-- </LinearLayout> -->
        <!-- 视频 -->

        <LinearLayout
            android:id="@+id/layout_vedio"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_fir_height"
            android:background="@drawable/image_title_navv"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/text_type_title"
                android:layout_width="wrap_content"
                android:layout_height="40dip"
                android:layout_marginTop="5dip"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dip"
                android:text="推荐视频"
                android:textColor="#000"
                android:textSize="@dimen/text_five" />

            <TextView
                android:id="@+id/btn_type_more"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="5dip"
                android:background="#00000000"
                android:drawableRight="@drawable/icon_my_to"
                android:gravity="right|center_vertical" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_vedio_top"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:layout_marginTop="5dip"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:id="@+id/relayout_vedio_one"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/image_height"
                    android:layout_weight="0.41" >

                    <ImageView
                        android:id="@+id/vedio_image_one"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/image_height"
                        android:layout_gravity="center"
                        android:scaleType="fitXY" />
                    <!-- android:background="@drawable/image_new_top_two" -->

                    <TextView
                        android:id="@+id/vedio_text_one"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/title_bg_height"
                        android:layout_marginTop="120dip"
                        android:background="@drawable/image_botton_title_more"
                        android:gravity="center"
                        android:shadowColor="#ff000000"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="1"
                        android:singleLine="true"
                        android:text="@string/text_default"
                        android:textColor="#fff"
                        android:textSize="@dimen/text_six" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relayout_vedio_two"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/image_height"
                    android:layout_marginLeft="5dip"
                    android:layout_weight="0.8" >

                    <ImageView
                        android:id="@+id/vedio_image_two"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/image_height"
                        android:layout_gravity="center"
                        android:scaleType="fitXY" />
                    <!-- android:background="@drawable/image_novel_eight" -->

                    <TextView
                        android:id="@+id/vedio_text_two"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/title_bg_height"
                        android:layout_marginTop="120dip"
                        android:background="@drawable/image_botton_title_more"
                        android:gravity="center"
                        android:maxLength="8"
                        android:shadowColor="#ff000000"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="1"
                        android:singleLine="true"
                        android:text="@string/text_default"
                        android:textColor="#fff"
                        android:textSize="@dimen/text_six" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <GridView
            android:id="@+id/main_video_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:horizontalSpacing="5dip"
            android:listSelector="#00000000"
            android:numColumns="3"
            android:scrollbars="none"
            android:verticalSpacing="5dip" />
        <!-- 小说 -->

        <LinearLayout
            android:id="@+id/layout_nevol"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_fir_height"
            android:background="@drawable/image_title_navv"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/text_type_title"
                android:layout_width="wrap_content"
                android:layout_height="40dip"
                android:layout_marginTop="5dip"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dip"
                android:text="推荐小说"
                android:textColor="#000"
                android:textSize="@dimen/text_five" />

            <TextView
                android:id="@+id/btn_type_more"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="5dip"
                android:background="#00000000"
                android:drawableRight="@drawable/icon_my_to"
                android:gravity="right|center_vertical" />
        </LinearLayout>

        <!-- <LinearLayout -->
        <!-- android:layout_width="match_parent" -->
        <!-- android:layout_height="wrap_content" -->
        <!-- android:orientation="horizontal" > -->

        <GridView
            android:id="@+id/novel_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:horizontalSpacing="5dip"
            android:listSelector="#00000000"
            android:numColumns="3"
            android:scrollbars="none"
            android:verticalSpacing="5dip" />
        <!-- </LinearLayout> -->
        <!-- 游戏下载 -->

        <LinearLayout
            android:id="@+id/layout_game_download"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_fir_height"
            android:background="@drawable/image_title_navv"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/text_type_title"
                android:layout_width="wrap_content"
                android:layout_height="40dip"
                android:layout_marginTop="5dip"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dip"
                android:text="游戏下载"
                android:textColor="#000"
                android:textSize="@dimen/text_five" />

            <TextView
                android:id="@+id/btn_type_more"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="5dip"
                android:background="#00000000"
                android:drawableRight="@drawable/icon_my_to"
                android:gravity="right|center_vertical"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ListView
                android:id="@+id/game_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dip"
                android:divider="@drawable/image_remind_line"
                android:listSelector="#00000000" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>