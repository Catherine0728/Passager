        <LinearLayout
            android:id="@+id/layout_news"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_fir_height"
            android:background="@drawable/image_title_nav"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/text_type_title"
                android:layout_width="wrap_content"
                android:layout_height="40dip"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dip"
                android:text="热点新闻"
                android:textColor="#000"
                android:textSize="@dimen/text_five" />

            <TextView
                android:id="@+id/btn_type_more"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:layout_marginRight="10dip"
                android:background="#00000000"
                android:drawableRight="@drawable/icon_my_to"
                android:gravity="right|center_vertical" />
        </LinearLayout>

        <!-- <LinearLayout -->
        <!-- android:id="@+id/layout_new_list" -->
        <!-- android:layout_width="match_parent" -->
        <!-- android:layout_height="match_parent" -->
