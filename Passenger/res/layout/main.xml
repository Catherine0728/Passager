        <LinearLayout
            android:id="@+id/layout_wifi_appear"
            android:layout_width="match_parent"
            android:layout_height="100dip"
            android:layout_marginBottom="10dip"
            android:layout_marginTop="10dip"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="100dip"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/btn_watch_moive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/image_watch"
                    android:gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="现场"
                    android:textColor="#555"
                    android:textSize="@dimen/text_five" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="看电影"
                    android:textColor="#555"
                    android:textSize="@dimen/text_five" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="100dip"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/btn_listen_moive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/image_listen"
                    android:gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="手机"
                    android:textColor="#555"
                    android:textSize="@dimen/text_five" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="听电影"
                    android:textColor="#555"
                    android:textSize="@dimen/text_five" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="100dip"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/btn_download_moive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/image_down"
                    android:gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="高速"
                    android:textColor="#555"
                    android:textSize="@dimen/text_five" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="下电影"
                    android:textColor="#555"
                    android:textSize="@dimen/text_five" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="100dip"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/btn_play_barrage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/image_barrage"
                    android:gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="一起"
                    android:textColor="#555"
                    android:textSize="@dimen/text_five" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="玩弹幕"
                    android:textColor="#555"
                    android:textSize="@dimen/text_five" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_broadcast"
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:layout_marginTop="10dip"
            android:background="#fff"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone" >

            <Button
                android:id="@+id/btn_broadcast_icon"
                android:layout_width="match_parent"
                android:layout_height="60dip"
                android:background="#00000000"
                android:drawableLeft="@drawable/btn_broadcast_icon"
                android:drawablePadding="10dip"
                android:text="dsagsahr"
                android:textSize="@dimen/text_five" />

            <!-- <Button -->
            <!-- android:id="@+id/btn_broadcast_text" -->
            <!-- android:layout_width="match_parent" -->
            <!-- android:layout_height="60dip" -->
            <!-- android:background="#fff" -->
            <!-- android:text="dsagsahr" -->
            <!-- android:textSize="@dimen/text_four" /> -->
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_four_fouse"
            android:layout_width="match_parent"
            android:layout_height="140dip"
        
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dip"
                android:orientation="horizontal" >

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >

                    <Button
                        android:id="@+id/btn_news"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#72d957"
                        android:drawableLeft="@drawable/icon_news"
                        android:drawablePadding="10dip"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="35dip"
                        android:text="@string/text_news"
                        android:textSize="@dimen/text_four" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_marginBottom="10dip"
                        android:gravity="bottom"
                        android:paddingLeft="80dip"
                        android:text="News"
                        android:textColor="#fff"
                        android:textSize="@dimen/text_seven" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >

                    <Button
                        android:id="@+id/btn_vedio"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="1dip"
                        android:background="#c376e1"
                        android:drawableLeft="@drawable/icon_vedio"
                        android:drawablePadding="10dip"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="35dip"
                        android:text="@string/text_vedio"
                        android:textSize="@dimen/text_four" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_marginBottom="10dip"
                        android:gravity="bottom"
                        android:paddingLeft="80dip"
                        android:text="Video"
                        android:textColor="#fff"
                        android:textSize="@dimen/text_seven" />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dip"
                android:layout_marginTop="1dip"
                android:orientation="horizontal" >

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >

                    <Button
                        android:id="@+id/btn_nevol"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#4ebae5"
                        android:drawableLeft="@drawable/icon_novel"
                        android:drawablePadding="10dip"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="35dip"
                        android:text="@string/text_nevol"
                        android:textSize="@dimen/text_four" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_marginBottom="10dip"
                        android:gravity="bottom"
                        android:paddingLeft="80dip"
                        android:text="Novel"
                        android:textColor="#fff"
                        android:textSize="@dimen/text_seven" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1" >

                    <Button
                        android:id="@+id/btn_game"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="1dip"
                        android:background="#ff6dab"
                        android:drawableLeft="@drawable/icon_game"
                        android:drawablePadding="10dip"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="35dip"
                        android:text="@string/text_game"
                        android:textSize="@dimen/text_four" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_marginBottom="10dip"
                        android:gravity="bottom"
                        android:paddingLeft="80dip"
                        android:text="Game"
                        android:textColor="#fff"
                        android:textSize="@dimen/text_seven" />
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
        <!-- 新闻 -->


        <!-- <LinearLayout -->
        <!-- android:layout_width="match_parent" -->
        <!-- android:layout_height="match_parent" -->
