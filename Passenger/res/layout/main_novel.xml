<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/image_hei"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/nevol_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_height"
        android:layout_weight="1"
        android:scaleType="fitXY" />
    <!-- android:background="@drawable/image_novel_eight" -->

    <TextView
        android:id="@+id/text_novel_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bg_height"
        android:layout_marginTop="120dip"
        android:background="@drawable/image_botton_title_more"
        android:gravity="center"
        android:shadowColor="#ff000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:maxLength="8"
        android:singleLine="true"
        android:text="@string/text_default"
        android:textColor="#fff"
        android:textSize="@dimen/text_six" />

</FrameLayout>