<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/image_wid_big"
            android:layout_gravity="center"
            android:background="@drawable/image_register_top_bg"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/image_head"
                android:layout_width="80dip"
                android:layout_height="80dip"
                android:layout_gravity="center"
                android:src="@drawable/icon_head_side" />

            <TextView
                android:id="@+id/text_motto"
                android:layout_width="93dip"
                android:layout_height="26dip"
                android:layout_gravity="center"
                android:layout_marginTop="18dip"
                android:background="@drawable/icon_login_name"
                android:gravity="center"
                android:text="请先登录"
                android:textColor="#354b56"
                android:textSize="@dimen/text_five" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dip"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:text="@string/text_my_point_name"
                android:textColor="#000"
                android:textSize="@dimen/text_four" />

            <TextView
                android:id="@+id/text_point"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:text="@string/text_default"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/text_five" />
        </LinearLayout>

        <ImageView
            android:id="@+id/image_line"
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:layout_margin="5dip"
            android:src="@drawable/image_remind_line" />

        <ListView
            android:id="@+id/list_package"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dip"
            android:divider="@null"
            android:listSelector="#00000000"
            android:scrollbars="none" />
    </LinearLayout>

</ScrollView>