<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/image_hei" >

    <ImageView
        android:id="@+id/vedio_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_height"
        android:layout_marginRight="5dip"
        android:layout_marginTop="5dip"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/text_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bg_height"
        android:layout_marginRight="5dip"
        android:layout_marginTop="125dip"
        android:background="@drawable/image_botton_title_more"
        android:gravity="center"
        android:maxLength="8"
        android:shadowColor="#ff000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:singleLine="true"
        android:text="@string/text_default"
        android:textColor="#fff"
        android:textSize="@dimen/text_six" />

</FrameLayout>