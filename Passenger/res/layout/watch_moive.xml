<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/text_toast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/moive_default"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_four" />

        <!-- <ImageView -->
        <!-- android:id="@+id/image_line" -->
        <!-- android:layout_width="match_parent" -->
        <!-- android:layout_height="0.5dip" -->
        <!-- android:background="@drawable/image_remind_line" /> -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_three"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/video_image"
                style="@style/Image_Style" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_margin="@dimen/margin_three"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/text_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/text_default"
                    android:textColor="#000"
                    android:textSize="@dimen/text_four" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/text_daoyan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="作者："
                        android:textColor="#000"
                        android:textSize="@dimen/text_five" />

                    <TextView
                        android:id="@+id/text_daoyan_name"
                        style="@style/TextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left|center_vertical"
                        android:text=""
                        android:textColor="#000" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/text_video_actor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="类型："
                        android:textColor="#000"
                        android:textSize="@dimen/text_five" />

                    <TextView
                        android:id="@+id/text_actor_name"
                        style="@style/TextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left|center_vertical"
                        android:text=""
                        android:textColor="#000" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/text_video_years"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/text_years_tostring"
                        android:textColor="#000"
                        android:textSize="@dimen/text_five" />

                    <TextView
                        android:id="@+id/text_years_time"
                        style="@style/TextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left|center_vertical"
                        android:text=""
                        android:textColor="#000" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="300dip"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btn_road"
                style="@style/Button_Style"
                android:layout_margin="10dip"
                android:background="@drawable/image_down_watch"
                android:drawableLeft="@drawable/icon_down_toad"
                android:gravity="left|center_vertical"
                android:paddingLeft="60dip"
                android:text="@string/btn_road_watch" >
            </Button>

            <Button
                android:id="@+id/btn_same_voice"
                style="@style/Button_Style"
                android:layout_margin="10dip"
                android:background="@drawable/image_still_listen"
                android:drawableLeft="@drawable/icon_go_listen"
                android:gravity="left|center_vertical"
                android:paddingLeft="60dip"
                android:text="@string/btn_same_voice" />

            <Button
                android:id="@+id/btn_play_screen"
                style="@style/Button_Style"
                android:layout_margin="10dip"
                android:background="@drawable/image_start_barrage"
                android:drawableLeft="@drawable/icon_start_barrage"
                android:gravity="left|center_vertical"
                android:paddingLeft="60dip"
                android:text="@string/btn_play_screen" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>